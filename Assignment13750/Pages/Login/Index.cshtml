@page "/login"
@model Assignment13750.Pages.Login.IndexModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="align-content-center">Login</h1>


<div class="row">
    <div class="col-md-4">
        <form method="post" class="input-group-lg">
            <div class="form-group">
                <label asp-for="Username" class = "form-label">Username:</label>
                <input type="text" asp-for="Username" class="form-control" />
             </div>
             <br />
            <div class="form-group">
                <label asp-for="Password" class="form-label">Password: </label>
                <input type="text" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
             
                <label asp-for="Rememberlogin" class="form-check-label"> Remember Login</label>
                <input asp-for="Rememberlogin" value="Remember Login" type="checkbox" class="form-check-input">
                <br>
            </div>
            <br />
            <input type="submit" value="Submit" class="btn btn-primary" />
            <div>
                    @if (Model.BadAttempt)
                    {
                    <p class="text-danger">Incorrect Username or Password</p>
                    }
                    </div>
            <div asp-validation-summary="All" ></div>
          </form>
        <p>
            <a asp-page="Create">Create Account</a>
        </p>
    </div>
</div>

  

