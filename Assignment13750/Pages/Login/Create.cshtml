@page
@model Assignment13750.Pages.Login.CreateModel

@{
    ViewData["Title"] = "Create Account";
}

<h1>Create Account</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Credentials.FirstName" class="control-label">First Name</label>
                <input asp-for="Credentials.FirstName" class="form-control" />
                <span asp-validation-for="Credentials.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credentials.LastName" class="control-label">Last Name</label>
                <input asp-for="Credentials.LastName" class="form-control" />
                <span asp-validation-for="Credentials.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credentials.Email" class="control-label">Email</label>
                <input asp-for="Credentials.Email" class="form-control" />
                <span asp-validation-for="Credentials.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credentials.Password" class="control-label">Password</label>
                <input asp-for="Credentials.Password" class="form-control" />
                <span asp-validation-for="Credentials.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                @if (Model.Confirmerror)
                {

                    <p class="text-danger">Your Passwords don't match</p>
                }
            </div>
            <div class="form-group">
                <label asp-for="Credentials.BirthDate" class="control-label">Birth Date</label>
                <input asp-for="Credentials.BirthDate" class="form-control" />
                <span asp-validation-for="Credentials.BirthDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Credentials.IsTeacher" class="control-label">Are You a Teacher?</label>
                <input asp-for="Credentials.IsTeacher" class="form-check-input" type="checkbox" />

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="All"></div>
            @if (Model.Under18)
            {
                <p>You must be over the age of 18 to use this service</p>
            }
            
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
